{
  "compilerOptions": {
    "target": "es5",
    "outDir": "tscomp",
    "module": "commonjs",
    "rootDirs": [ "client/app", "common/lib" ],
    "baseUrl": "node_modules",
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "importHelpers": true,
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "alwaysStrict": true,
    "noUnusedParameters": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2016", "dom"]
  },
  "files": [
    "typings/index.d.ts"
  ],
  "paths": {
    "angular-async-local-storage": ["node_modules/angular-async-local-storage/src"]
  },
  "exclude": [
    "node_modules/**/*",
    "attic/*",
    "tscomp/**/*",
    "server/**/*",
    "build/**/*",
    "dist/**/*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "forkChecker": true,
    "useCache": true
  },
  "compileOnSave": true,
  "buildOnSave": true,
  "atom": { "rewriteTsconfig": false }
}
