{
  "compilerOptions": {
    "target": "es5",
    "outDir": "tscomp",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "importHelpers": true,
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noUnusedParameters": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": [ "es6", "dom", "scripthost", "es2015.promise", "es2015.iterable", "es2015.core", "es2015.collection" ],
    "rootDirs": [ "client", "common/lib" ],
    "baseUrl": ".",
    "paths": {
      "*": ["*", "common/lib/*", "node_module/*"]
    }
    /*
    "types": [
      "@angular/core",
      "@angular/http",
      "@angular/material",
      "@angular/router",
      "node",
      "chance",
      "lodash",
      "webrtc",
      "peerjs",
      "webpack",
      // "es6-promise",
      "socket.io-client",
      "uuid",
      "jasmine",
      "source-map"
      // "q",
      // "jasmine",
      // "hammerjs",
      // "uglify-js",
      // "selenium-webdriver"
    ]
  */
  },
  "files": [
    "typings/index.d.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    "typings/main/**/*",
    "attic/*",
    "server/**/*",
    "build/**/*",
    "dist/**/*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "forkChecker": true,
    "useCache": true
  },
  "compileOnSave": true,
  "buildOnSave": true,
  "atom": { "rewriteTsconfig": false }
}
